<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <Target Name="PreCompileRustSolutions" BeforeTargets="Build">
    <Exec Command="rm -f ./target/debug/rustsolutions.dll" />
    <Exec Command="cargo build --lib --quiet" />
    <Exec Command="mv ./target/debug/libsolutions.so ./target/debug/rustsolutions.dll"/>
  </Target>

  <ItemGroup>
    <Content Include="target/debug/*.dll">
      <Link>%(FileName)%(Extension)</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
